#!/usr/bin/env python3

import re
import os
import sys

data = ""
for _ in range(0,3):
	data = data + sys.stdin.readline()

m = re.search("""(\d{2,})""", data)
pid = int(m.group(1))

# Unity version
# cmd = """xdotool key ctrl+shift+t && xdotool type "gdb -p {}" && xdotool key Return""".format(pid)

# i3wm version
cmd = """i3-msg 'exec xfce4-terminal' && sleep 0.25 && xdotool type "lldb -p {}" && xdotool key Return""".format(pid)

os.system(cmd)
